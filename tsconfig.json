{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "types": ["node", "vitest/globals", "jest"],
  "moduleResolution": "node16",
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}